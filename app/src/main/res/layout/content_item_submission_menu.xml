<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.nearbyshops.shopkeeperapp.PickFromShopMenu.OrdersPickFromShop"
    tools:showIn="@layout/activity_orders_pick_from_shop"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content_orders_pick_from_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <TextView
            android:id="@+id/border_top"
            android:background="#88000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="1dp" />

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/border_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/header_inventory"
            android:text="Item Submissions"
            android:textSize="17sp"
            android:background="@color/light_grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <android.support.constraint.Guideline
            android:id="@+id/vertical_guide"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="10dp" />


        <!--app:layout_constraintRight_toLeftOf="@id/vertical_guide"-->
        <!--android:layout_marginEnd="5dp"-->
        <!--android:layout_marginRight="5dp"-->

        <ImageView
            android:paddingBottom="60dp"
            android:background="@color/gplus_color_2"
            android:id="@+id/pick_from_shop_inventory"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_inventory"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_nature_people_white_48px"
            android:layout_width="0dp"
            android:layout_height="150dp" />


        <TextView
            app:layout_constraintLeft_toLeftOf="@+id/pick_from_shop_inventory"
            app:layout_constraintRight_toRightOf="@+id/pick_from_shop_inventory"
            app:layout_constraintBottom_toBottomOf="@+id/pick_from_shop_inventory"
            android:padding="10dp"
            android:id="@+id/text_items_by_category"
            android:textSize="@dimen/menu_item_text_size"
            android:textColor="#ffffff"
            android:text="Item Submissions"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />



        <TextView
            app:layout_constraintTop_toBottomOf="@+id/pick_from_shop_inventory"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/header_database"
            android:text="Orders Database : Pick from Shop"
            android:textSize="17sp"
            android:background="@color/light_grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />



        <ImageView
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:paddingBottom="60dp"
            android:background="@color/buttonColor"
            android:id="@+id/cancelled_orders"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toLeftOf="@+id/vertical_guide"
            app:layout_constraintTop_toBottomOf="@+id/header_database"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_close_white_24dp"
            android:layout_width="0dp"
            android:layout_height="150dp" />


        <TextView
            app:layout_constraintLeft_toLeftOf="@+id/cancelled_orders"
            app:layout_constraintRight_toRightOf="@+id/cancelled_orders"
            app:layout_constraintBottom_toBottomOf="@+id/cancelled_orders"
            android:padding="10dp"
            android:id="@+id/text_cancelled_orders"
            android:textSize="@dimen/menu_item_text_size"
            android:textColor="#ffffff"
            android:text="Cancelled Orders"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />




        <ImageView
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:paddingBottom="60dp"
            android:background="@color/phonographyBlue"
            android:id="@+id/orders_history"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_database"
            app:srcCompat="@drawable/ic_playlist_add_from_global"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintLeft_toLeftOf="@+id/vertical_guide" />


        <TextView
            app:layout_constraintLeft_toLeftOf="@+id/orders_history"
            app:layout_constraintRight_toRightOf="@+id/orders_history"
            app:layout_constraintBottom_toBottomOf="@+id/orders_history"
            android:padding="10dp"
            android:id="@+id/text_orders_history"
            android:textSize="@dimen/menu_item_text_size"
            android:textColor="#ffffff"
            android:text="Orders History"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />









    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.NestedScrollView>