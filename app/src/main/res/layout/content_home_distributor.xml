<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.constraint.ConstraintLayout
        android:id="@+id/content_home"
        android:layout_marginTop="?actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <android.support.constraint.Guideline
            android:layout_width="0dp"
            android:layout_height="321dp"
            android:id="@+id/guideline"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="180dp"
            app:layout_constraintGuide_percent="0.5" />


        <TextView
            android:padding="10dp"
            android:background="@color/light_grey"
            android:id="@+id/header"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:text="Distributor Home"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/image_shop_list"
            android:background="@color/orangeDark"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintLeft_toLeftOf="parent" />


        <TextView
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Shop List"
            app:layout_constraintBottom_toBottomOf="@+id/image_shop_list"
            app:layout_constraintLeft_toLeftOf="@+id/image_shop_list"
            app:layout_constraintRight_toRightOf="@+id/image_shop_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />



        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#88000000"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/image_shop_list"
            android:id="@+id/border_one"
            android:layout_width="0dp"
            android:layout_height="1dp" />

        <TextView
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="User Accounts"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/border_one"
            android:id="@+id/headline_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <TextView
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#88000000"
            app:layout_constraintTop_toBottomOf="@+id/headline_one"
            android:id="@+id/border_two"
            android:layout_width="0dp"
            android:layout_height="0dp" />


        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/image_staff_account"
            android:background="@color/blueGrey800"
            android:layout_marginRight="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/border_two"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            android:layout_marginEnd="5dp" />


        <TextView
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Staff Accounts"
            app:layout_constraintBottom_toBottomOf="@+id/image_staff_account"
            app:layout_constraintLeft_toLeftOf="@+id/image_staff_account"
            app:layout_constraintRight_toRightOf="@+id/image_staff_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />



        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/image_delivery_account"
            android:background="@color/gplus_color_2"
            android:layout_marginLeft="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/border_two"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline" />


        <TextView
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Delivery Accounts"
            app:layout_constraintBottom_toBottomOf="@+id/image_delivery_account"
            app:layout_constraintLeft_toLeftOf="@+id/image_delivery_account"
            app:layout_constraintRight_toRightOf="@+id/image_delivery_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.NestedScrollView>