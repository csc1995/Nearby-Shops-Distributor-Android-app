<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardCornerRadius="0dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/itemCategoryListItem"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/in_shop_color"
                android:background="@color/darkGreen"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/in_shop_text"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:text="In Shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>



            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"

                android:background="#88000000"
                android:layout_width="1dp"
                android:layout_height="25dp"/>


            <ImageView
                android:id="@+id/more_options"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_more_vert_black_48px"/>


        </LinearLayout>



        <LinearLayout
            android:layout_marginBottom="5dp"
            android:background="#88000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp">



            <ImageView
                android:background="#66000000"
                android:id="@+id/categoryImage"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/ic_nature_people_white_48px"/>


            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"
                android:text="Item Category Name"
                android:textSize="24sp"
                android:id="@+id/categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <!--

                        <TextView
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="#77000000"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/white"
                            android:layout_marginTop="5dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30sp"
                            android:text="Category Name"/>
            -->

            <TextView
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:padding="5dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#77000000"
                android:textColor="@color/white"
                android:id="@+id/categoryDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price (Average) : 43.32 \nShop Count : 3234 \nRating : 4.35 (423 Ratings)"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>