<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.localareadelivery.distributorapp.ShopHome.ShopHome"
    tools:showIn="@layout/activity_shop_home">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    
    
    

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height">


        <TextView

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:padding="20dp"
            android:textSize="@dimen/menu_item_textsize"
            android:id="@+id/addRemoveItemsButton"
            android:background="#bbD84315"
            android:textColor="@color/white"
            android:text="Add Items"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="bottom|right"
            android:padding="20dp"
            android:textSize="@dimen/menu_item_textsize"
            android:id="@+id/addStockButton"
            android:background="@color/darkGreen"
            android:textColor="@color/white"
            android:text="Add Stock"/>

    </LinearLayout>





    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height">


        <TextView

            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:textSize="@dimen/menu_item_textsize"
            android:gravity="bottom|right"
            android:id="@+id/ordersButton"

            android:background="#aa006064"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="Orders" />


        <!--

        <android.support.v7.widget.CardView
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            app:cardElevation="0dp"

            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    -->

            <TextView
                android:layout_marginLeft="5dp"
                android:background="@color/orangeDark"
                android:gravity="bottom|right"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:textSize="@dimen/menu_item_textsize"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="Statistics" />

    </LinearLayout>

    <LinearLayout
        android:background="#aa2E7D32"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height">


        <ImageView
            android:padding="20dp"
            android:src="@drawable/ic_account_balance_white_24px"
            android:layout_width="130dp"
            android:layout_height="match_parent" />

        <TextView
            android:padding="20dp"
            android:gravity="bottom|right"

            android:textSize="@dimen/menu_item_textsize"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Billing"/>

    </LinearLayout>

</LinearLayout>

</ScrollView>