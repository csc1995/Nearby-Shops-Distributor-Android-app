<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.localareadelivery.distributorapp.ShopHome.ShopHome"
    tools:showIn="@layout/activity_shop_home">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:layout_gravity="center_horizontal"
        android:gravity="right"
        android:padding="20dp"
        android:textSize="25sp"
        android:id="@+id/addRemoveItemsButton"
        android:background="@color/grey800"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Add Items"/>

    <TextView
        android:layout_gravity="center_horizontal"
        android:gravity="right"
        android:padding="20dp"
        android:textSize="25sp"
        android:id="@+id/addStockButton"
        android:layout_marginTop="10dp"
        android:background="@color/cyan900"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Add Stock"/>



    <TextView
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:textSize="25sp"
        android:gravity="right"
        android:id="@+id/ordersButton"
        android:layout_marginTop="10dp"
        android:background="@color/cyan900"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Orders" />


    <android.support.v7.widget.CardView
        app:cardElevation="4dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:background="@color/cyan900"
            android:gravity="right"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:textSize="25sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Statistics" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/cyan900"
            android:src="@drawable/ic_account_balance_white_24px"
            android:layout_width="90dp"
            android:layout_height="match_parent" />

    <TextView
        android:gravity="left"
        android:padding="20dp"
        android:background="@color/cyan900"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Billig Options"/>

    </LinearLayout>

</LinearLayout>

</ScrollView>