<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:background="#7737474F"
                android:scaleType="centerCrop"
                android:id="@+id/uploadImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_view_height" />


            <TextView
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/textChangePicture"
                android:textSize="25sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="#88000000"
                android:textColor="#ffffff"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Picture" />


            <ImageView
                android:paddingBottom="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:foregroundGravity="right"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/ic_nature_people_white_48px"
                android:id="@+id/changePicture"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/removePicture"
            android:textStyle="normal"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Picture"/>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:enabled="false"
                android:id="@+id/item_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID"/>

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textColor="#000000"
                android:inputType="text"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textColor="#000000"
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"/>

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            app:passwordToggleEnabled="true"
            android:layout_height="wrap_content">

            <EditText
                android:textColor="#000000"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            android:layout_height="wrap_content">

            <EditText
                android:textColor="#000000"
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="About you"/>

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textColor="#000000"
                android:inputType="text"
                android:id="@+id/designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Designation (Roles and Responsibilities)"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textColor="#000000"
                android:inputType="phone"
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"/>

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textColor="#000000"
                android:inputType="textMultiLine"
                android:id="@+id/govt_id_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Government ID Name"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="textMultiLine"
                android:textColor="#000000"
                android:id="@+id/govt_id_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Government ID Number"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#33000000"
            android:text="Privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_marginTop="10dp"
            android:text="Make account private"
            android:id="@+id/make_account_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Private accounts are hidden from public"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView
            android:layout_marginTop="20dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#33000000"
            android:text="Permissions : General"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <CheckBox
            android:layout_marginTop="10dp"
            android:text="Add/Remove Items from Shop"
            android:id="@+id/permit_add_remove_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:text="Update Stock"
            android:id="@+id/permit_update_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />





        <TextView
            android:layout_marginTop="20dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#33000000"
            android:text="Permissions : Home Delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <CheckBox
            android:text="Cancel Orders"
            android:id="@+id/permit_cancel_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <CheckBox
            android:text="Confirm Orders"
            android:id="@+id/permit_confirm_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <CheckBox
            android:text="Set Orders Packed"
            android:id="@+id/permit_set_orders_packed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <CheckBox
            android:text="Handover to delivery"
            android:id="@+id/permit_handover_to_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <CheckBox
            android:text="Mark Orders Delivered"
            android:id="@+id/permit_mark_orders_delivered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <CheckBox
            android:text="Accept Payments From Delivery"
            android:id="@+id/permit_accept_payments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <CheckBox
            android:text="Accept Returns"
            android:id="@+id/permit_accept_returns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView
            android:layout_marginTop="20dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#33000000"
            android:text="Permissions : Pick From Shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <CheckBox
            android:text="Cancel Orders"
            android:id="@+id/permit_cancel_orders_pfs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <CheckBox
            android:text="Confirm Orders"
            android:id="@+id/permit_confirm_orders_pfs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <CheckBox
            android:text="Set Orders Packed"
            android:id="@+id/permit_set_orders_packed_pfs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <CheckBox
            android:text="Set Order Ready for Pickup"
            android:id="@+id/permit_set_ready_for_pickup_pfs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <CheckBox
            android:text="Accept Payments Pick From Shop"
            android:id="@+id/permit_accept_payments_pfs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:text="Mark Orders Delivered"
            android:id="@+id/permit_mark_orders_delivered_pfs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




        <Switch
            android:layout_marginTop="10dp"
            android:background="@color/light_grey"
            android:text="Enable / Disable Account"
            android:id="@+id/switch_enable"
            android:textOff="Enable Account"
            android:textOn="Disable Account"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />





        <Button
            android:layout_marginBottom="10dp"
            android:elevation="10dp"
            android:id="@+id/saveButton"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blueGrey800"
            android:textColor="@color/white"
            android:text="Save"/>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>