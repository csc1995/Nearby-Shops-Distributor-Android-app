<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_margin="5dp">


    <LinearLayout

        android:padding="5dp"
        android:id="@+id/shopListItem"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/carrots"/>

        <TextView
            android:padding="10dp"
            android:id="@+id/shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Shop Name"/>

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/radiusOfService"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Radius"/>


        <LinearLayout
            android:background="#88000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button

                android:visibility="gone"
                android:background="@color/white"

                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_edit_black_48px"

                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"/>


            <ImageView

                android:id="@+id/editIcon"
                android:padding="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_48px"/>

            <ImageView
                android:id="@+id/deleteIcon"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_black_48px"/>


            <Button

                android:visibility="gone"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_delete_black_48px"
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"/>




        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>