<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"

    android:layout_margin="5dp">


    <LinearLayout
        android:id="@+id/shopListItem"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/shopImage"
            android:contentDescription="A sample description"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#66000000"
            app:srcCompat="@drawable/nature_people"/>

        <TextView
            android:padding="5dp"
            android:id="@+id/shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Shop Name"/>

        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/radiusOfService"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Radius"/>


        <LinearLayout
            android:background="#88000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>



            <ImageView

                android:id="@+id/editIcon"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_edit_black_48px"/>

            <TextView
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:text="Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="#88000000"
                android:layout_width="1dp"
                android:layout_height="25dp"/>


            <ImageView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:id="@+id/deleteIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_delete_black_48px"/>


            <TextView
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:text="Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




        </LinearLayout>




    </LinearLayout>


</android.support.v7.widget.CardView>