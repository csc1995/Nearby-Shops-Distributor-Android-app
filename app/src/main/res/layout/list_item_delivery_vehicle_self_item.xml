<RelativeLayout
    android:id="@+id/list_item_delivery_vehicle_self"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="#22000000"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/vehicleID"
        android:padding="5dp"
        android:textSize="25dp"
        android:text="Vehicle ID : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/border"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/vehicleID"
        android:background="#88000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>




    <TextView
        android:layout_below="@id/border"
        android:id="@+id/vehicleName"
        android:padding="5dp"
        android:textSize="20dp"
        android:text="Vehicle Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/borderThree"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/vehicleName"
        android:background="#88000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_below="@id/borderThree"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/editButton"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@color/teal"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/removeButton"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@color/gplus_color_4"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Remove"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>