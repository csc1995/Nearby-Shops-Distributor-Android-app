<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <android.support.constraint.ConstraintLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="gone"
            android:id="@+id/border_top"
            android:layout_marginTop="0dp"
            android:background="#88000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="1dp" />

        <TextView
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/border_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="5dp"
            android:id="@+id/header_items"
            android:text="Items"
            android:textSize="17sp"
            android:background="@color/light_grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />


        <android.support.constraint.Guideline
            android:id="@+id/vertical_guide"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            android:layout_width="0dp"
            android:layout_height="0dp" />



        <ImageView
            android:visibility="gone"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:paddingBottom="60dp"
            android:background="@color/buttonColor"
            android:id="@+id/items_by_category"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toLeftOf="@id/vertical_guide"
            app:layout_constraintTop_toBottomOf="@id/header_items"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_edit_black_48px"
            android:layout_width="0dp"
            android:layout_height="@dimen/menu_item_width" />


        <TextView
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/items_by_category"
            app:layout_constraintRight_toRightOf="@id/items_by_category"
            app:layout_constraintBottom_toBottomOf="@id/items_by_category"
            android:padding="10dp"
            android:id="@+id/text_items_by_category"
            android:textSize="@dimen/menu_item_text_size"
            android:textColor="#ffffff"
            android:text="Items by Category"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />



        <ImageView
            android:visibility="gone"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:paddingBottom="60dp"
            android:background="@color/buttonColorDark"
            android:id="@+id/items"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/vertical_guide"
            app:layout_constraintTop_toBottomOf="@id/header_items"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="@dimen/menu_item_width" />


        <TextView
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/items"
            app:layout_constraintRight_toRightOf="@id/items"
            app:layout_constraintBottom_toBottomOf="@id/items"
            android:padding="10dp"
            android:id="@+id/text_items"
            android:textSize="@dimen/menu_item_text_size"
            android:textColor="#ffffff"
            android:text="Items"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />




        <TextView
            android:visibility="gone"
            android:id="@+id/border_items_in_shop"
            android:layout_marginTop="10dp"
            android:background="#88000000"
            app:layout_constraintTop_toBottomOf="@id/items_by_category"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="1dp" />

        <TextView
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/border_items_in_shop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="5dp"
            android:id="@+id/header_items_in_shop"
            android:text="Items In Shop"
            android:textSize="17sp"
            android:background="@color/light_grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />



        <ImageView
            android:visibility="gone"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:paddingBottom="60dp"
            android:background="@color/gplus_color_1"
            android:id="@+id/items_in_shop_by_category"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toLeftOf="@id/vertical_guide"
            app:layout_constraintTop_toBottomOf="@id/header_items_in_shop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_delete_black_48px"
            android:layout_width="0dp"
            android:layout_height="@dimen/menu_item_width" />


        <TextView
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/items_in_shop_by_category"
            app:layout_constraintRight_toRightOf="@id/items_in_shop_by_category"
            app:layout_constraintBottom_toBottomOf="@id/items_in_shop_by_category"
            android:padding="10dp"
            android:id="@+id/text_items_in_shop_by_cat"
            android:textSize="@dimen/menu_item_text_size"
            android:textColor="#ffffff"
            android:text="Items In Shop by Category"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />




        <ImageView
            android:visibility="gone"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:paddingBottom="60dp"
            android:background="@color/cyan900"
            android:id="@+id/items_in_shop"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_search_white_24px"
            app:layout_constraintLeft_toRightOf="@id/vertical_guide"
            app:layout_constraintTop_toBottomOf="@id/header_items_in_shop"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="@dimen/menu_item_width" />


        <TextView
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/items_in_shop"
            app:layout_constraintRight_toRightOf="@id/items_in_shop"
            app:layout_constraintBottom_toBottomOf="@id/items_in_shop"
            android:padding="10dp"
            android:id="@+id/text_items_in_shop"
            android:textSize="@dimen/menu_item_text_size"
            android:textColor="#ffffff"
            android:text="Items In Shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />





        <ImageView
            android:visibility="gone"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:paddingBottom="60dp"
            android:background="@color/gplus_color_3"
            android:id="@+id/quick_stock_editor"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toLeftOf="@id/vertical_guide"
            app:layout_constraintTop_toBottomOf="@id/items_in_shop_by_category"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_delete_black_48px"
            android:layout_width="0dp"
            android:layout_height="@dimen/menu_item_width" />


        <TextView
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/quick_stock_editor"
            app:layout_constraintRight_toRightOf="@id/quick_stock_editor"
            app:layout_constraintBottom_toBottomOf="@id/quick_stock_editor"
            android:padding="10dp"
            android:id="@+id/text_quick_stock_editor_text"
            android:textSize="@dimen/menu_item_text_size"
            android:textColor="#ffffff"
            android:text="Quick Stock Editor"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <TextView
            android:visibility="gone"
            android:id="@+id/border_bottom"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="#88000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quick_stock_editor"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="1dp" />


    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>