<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:cardElevation="2dp"
android:layout_margin="5dp">

<LinearLayout
    android:id="@+id/itemListItem"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="#66000000"
            android:id="@+id/itemImage"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/nature_people"/>



        <TextView
            android:background="#77000000"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Item Name"/>

        <TextView
            android:background="#77000000"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:id="@+id/itemDescription"
            android:layout_marginTop="85dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Description"/>


        <TextView
            android:background="#77000000"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:id="@+id/brandName"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Brand Name"/>


        <TextView
            android:background="#77000000"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"

            android:layout_marginTop="125dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price : "/>

        <TextView
            android:background="#77000000"
            android:layout_marginLeft="65dp"
            android:textColor="@color/white"
            android:id="@+id/itemPrice"
            android:layout_marginTop="125dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price : "/>

    </RelativeLayout>




    <LinearLayout

        android:layout_marginTop="5dp"
        android:background="#88000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:visibility="gone"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical"
            android:text="Price : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:visibility="gone"
            android:textSize="20sp"

            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:text="54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="5dp"
            android:textColorHint="#88000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <EditText
                android:hint="Item Available"
                android:textColorHint="@color/cyan900"
                android:inputType="number"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:minWidth="130dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </android.support.design.widget.TextInputLayout>


        <LinearLayout

            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#88000000"
            android:layout_width="1dp"
            android:layout_height="25dp"/>


        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <EditText
                android:hint="Item Price"
                android:id="@+id/itemPriceInput"

                android:inputType="number"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"


                android:minWidth="100dp"
                android:maxWidth="100dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </android.support.design.widget.TextInputLayout>





        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>



        <ImageView
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/itemPriceReduce"
            android:layout_gravity="center_vertical"
            android:background="@color/grey800"
            android:src="@drawable/ic_remove_white_24px"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />



        <ImageView
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/itemPriceIncrease"
            android:layout_gravity="center_vertical"
            android:background="@color/grey800"
            android:src="@drawable/ic_add_white_24px"
            android:layout_width="40dp"
            android:layout_height="40dp" />


        <LinearLayout
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"

            android:background="#88000000"
            android:layout_width="1dp"
            android:layout_height="25dp"/>


        <ImageView

            android:visibility="gone"
            android:id="@+id/deleteIcon"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_black_48px"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/deleteText"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:background="#88000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>




    <LinearLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/editIcon"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_details_black_48px"/>

        <TextView

            android:id="@+id/editText"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:text="Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"

            android:background="#88000000"
            android:layout_width="1dp"
            android:layout_height="25dp"/>


        <ImageView
            android:id="@+id/moreOptions"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_black_24dp"/>

    </LinearLayout>

</LinearLayout>

</android.support.v7.widget.CardView>