<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <!--tools:context=".DistributorLogin"-->
    <!--tools:showIn="@layout/activity_login"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">



            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:background="#88000000"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


            <RelativeLayout
                android:background="@color/white"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/status_indicator_one"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gplus_color_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />


                <!--
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textColorHighlight="@color/white"
                android:textColorLink="@color/white"

                android:textColorHint="@color/white"
                -->

                <android.support.design.widget.TextInputLayout
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:id="@+id/text_input_service_url"
                    app:layout_scrollFlags="scroll|enterAlways"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:inputType="textUri"
                        android:id="@+id/serviceURL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Service URL"/>

                </android.support.design.widget.TextInputLayout>



                <!--<TextView-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_marginEnd="10dp"-->
                <!--android:layout_marginStart="10dp"-->
                <!--android:id="@+id/border_text_input"-->
                <!--android:layout_below="@id/text_input_service_url"-->
                <!--android:background="#88000000"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp" />-->


                <!--android:layout_below="@id/border_text_input"-->
                <LinearLayout
                    android:layout_below="@id/text_input_service_url"
                    android:layout_marginTop="5dp"
                    app:layout_scrollFlags="scroll|enterAlways"
                    android:layout_marginBottom="0dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/discover_services_button"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/buttonColor"
                        android:padding="10dp"
                        android:paddingRight="1dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="Discover Services"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/paste_url_button"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"
                        android:layout_marginRight="0dp"
                        android:layout_marginEnd="0dp"
                        android:background="@color/cyan900"
                        android:padding="10dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="Paste Service URL"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

            <!--</android.support.v7.widget.CardView>-->


            <TextView
                android:background="#88000000"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:text="Login"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:background="@color/gplus_color_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="5dp"
                android:background="#88000000"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


            <ProgressBar
                android:visibility="invisible"
                android:id="@+id/progress_bar"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateTint="@color/buttonColorDark" />





            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Username"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                app:passwordToggleEnabled="true"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/distributorPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Password"/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="@color/white"
                    android:background="@color/blueGrey800"/>

                <Button
                    android:id="@+id/signUpButton"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="end"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:background="@color/cyan900"
                    android:textColor="@color/white"/>
            </LinearLayout>


            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:padding="5dp"
                android:text="Select Your Role"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



                <LinearLayout
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginEnd="3dp"
                        android:layout_marginRight="3dp"
                        android:id="@+id/role_delivery"
                        android:gravity="center"
                        android:padding="13dp"
                        android:background="@color/light_grey"
                        android:text="Delivery"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />


                    <TextView
                        android:layout_marginRight="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/role_distributor"
                        android:gravity="center"
                        android:layout_marginRight="3dp"
                        android:layout_marginEnd="3dp"
                        android:padding="10dp"
                        android:background="#22000000"
                        android:text="Shop Admin"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />



                    <TextView
                        android:id="@+id/role_staff"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:padding="13dp"
                        android:background="@color/light_grey"
                        android:text="Shop Staff"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

        </LinearLayout>

</android.support.v4.widget.NestedScrollView>